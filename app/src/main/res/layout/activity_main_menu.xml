<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nz.uict.a2037689.tuckbox.MainMenu"
    android:background="@color/mainBackground"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="178dp"
        android:layout_height="168dp"
        app:srcCompat="@drawable/tuckbox"
        android:layout_gravity="center_horizontal"
        />

    <Button
        android:id="@+id/btnOrderNow"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/mainButtonBackground"
        android:onClick="mainMenuOrderClick"
        android:text="Order Now"
        android:textColor="@color/mainButtonText"
        android:layout_marginTop="60dp"/>

    <Button
        android:id="@+id/btnLogOut"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:backgroundTint="@color/logoutButtonBackground"
        android:onClick="LogOutClick"
        android:text="LogOut"
        android:textColor="@color/mainButtonText"
        tools:layout_editor_absoluteY="387dp" />
</LinearLayout>
