<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nz.uict.a2037689.tuckbox.OrderConfirmed"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="@string/confirmed"
        android:textSize="15dp"
        android:layout_gravity="center"
        android:paddingRight="50dp"
        android:paddingBottom="50dp"
        android:paddingLeft="50dp"
        android:gravity="center"
        />

    <Button
        android:id="@+id/confirmedMainMenu"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:text="@string/mainmenu"
        android:backgroundTint="@color/mainButtonBackground"
        android:textColor="@color/mainButtonText"
        android:layout_gravity="center"
        android:onClick="onClickMainMenu"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="100dp"/>


</LinearLayout>
